
" Display options
set showcmd
set showmode

" Turn on syntax highlighting
syntax on

" Turn on line numbers
set number

" Turn on line wrapping
set wrap

" Set colorscheme
colorscheme ron

" Encoding
set encoding=utf-8

" Highlight matching search patterns
set hlsearch

" Enable incremental shearch
set incsearch

" inclue only uppercase words with uppercase search term
set smartcase

" Tab settings
set tabstop=4
set shiftwidth=4
set expandtab
